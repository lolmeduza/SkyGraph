{
  "name": "sky-graph",
  "displayName": "Sky Graph",
  "description": "AI panel with multiple chats, graph/index search, and LLM-driven tasks",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "engines": { "vscode": "^1.80.0" },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:skyGraph.openPanel"
  ],
  "contributes": {
    "commands": [
      { "command": "skyGraph.openPanel", "title": "Sky Graph: Open Panel" },
      { "command": "skyGraph.openUserInstructions", "title": "Sky Graph: Open User Instructions" },
{ "command": "skyGraph.sendFileToLLM", "title": "Sky Graph: Send current file to LLM" },
      { "command": "skyGraph.showOutput", "title": "Sky Graph: Show Output Log" }
],
    "keybindings": [
      { "command": "skyGraph.openPanel", "key": "alt+ctrl+p", "mac": "cmd+ctrl+p", "when": "editorTextFocus" },
      { "command": "skyGraph.sendFileToLLM", "key": "shift+ctrl+l", "mac": "cmd+shift+l", "when": "editorTextFocus" },
      { "command": "skyGraph.sendFileToLLM", "key": "ctrl+alt+l", "mac": "cmd+ctrl+l", "when": "editorTextFocus" }
    ],
    "configuration": {
      "title": "Sky Graph",
      "properties": {
        "skyGraph.llm.provider": {
          "type": "string",
          "enum": ["local", "openai", "ollama"],
          "default": "local",
          "description": "LLM provider"
        },
        "skyGraph.llm.url": {
          "type": "string",
          "default": "",
          "description": "LLM API URL. Empty = OpenAI (use apiKey) or Ollama on localhost. Set for custom server (e.g. http://host:port/v1/chat/completions)."
        },
        "skyGraph.llm.apiKey": { "type": "string", "default": "", "description": "API key for OpenAI. Leave empty for local/ollama." },
        "skyGraph.llm.model": { "type": "string", "default": "", "description": "Model name (e.g. gpt-4o, llama3)." },
        "skyGraph.llm.maxTokens": { "type": "number", "default": 240000 },
        "skyGraph.llm.temperature": { "type": "number", "default": 0.1 },
        "skyGraph.llm.contextWindow": { "type": "number", "default": 128000, "description": "Context window size (tokens) for compression threshold" }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && node -e \"const fs=require('fs'),path=require('path');const d=path.join('out','panel','styles');fs.mkdirSync(d,{recursive:true});fs.copyFileSync(path.join('src','panel','styles','panel.css'),path.join(d,'panel.css'));\"",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
